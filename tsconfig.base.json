{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022"],
    "moduleResolution": "Bundler",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "types": ["node"],
    "paths": {
      "@aws-bedrock-multiagents/shared": ["./packages/shared/src/index.ts"],
      "@aws-bedrock-multiagents/shared/*": ["./packages/shared/src/*"]
    }
  }
}
