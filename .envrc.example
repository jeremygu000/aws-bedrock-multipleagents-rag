# export BEDROCK_QA_ALIAS_ARN="arn:aws:bedrock:ap-southeast-2:123456789012:agent-alias/AGENT_ID/ALIAS_ID"
# export BEDROCK_WORK_ALIAS_ARN="arn:aws:bedrock:ap-southeast-2:123456789012:agent-alias/AGENT_ID/ALIAS_ID"

# Optional RAGAS evaluator models.
