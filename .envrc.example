# Copy this file to .envrc for local use.
# .envrc is gitignored and intended for direnv.

# Preferred AWS auth for this project.
export AWS_PROFILE="my-dev"
export AWS_DEFAULT_REGION="ap-southeast-2"
export AWS_REGION="$AWS_DEFAULT_REGION"

# Optional project setting.
# The CDK stack still hardcodes this value today, but keeping it here
# makes later migration to env-based config straightforward.
export FOUNDATION_MODEL_ID="amazon.nova-lite-v1:0"

# Optional Bedrock test client shortcuts.
